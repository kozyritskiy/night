extends ../auth.layout.pug

block variables
    - var titlePage = 'Козырицкий Максим';
    - var titleSite = 'Личный сайт веб-разработчика';

block content
  section.section.welcome#auth
    canvas#pixie
    .parallax
      img(src="./assets/images/content/parallax-bg.png", alt="" data-parallax="0.06").parallax__img
    .intro  
      .intro__welcome
        .avatar
          .avatat__data
            .avatar__pic
                img.avatar__img(src="./assets/images/content/avatar-small.jpg", alt="photo__img")
            .avatar__desc
                .avatar__name #{titlePage}
                .avatar__info #{titleSite}
       
        +socialsIndex('socials', socials)
        +navWelcome('nav-welc', welc)    
      #auth-comps
    .auth-btn
      button.button.button_auth Авторизоваться
    .copyright &copy Максим Козырицкий | Создано в LoftSchool | 2018