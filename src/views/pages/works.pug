extends ../main.layout.pug

block variables
    - var title = 'Блог';
    - var titlePage = 'Максим Козырицкий';
    - var titleSite = 'Личный сайт разработчика';

block scripts
    script(src='works.bundle.js')

block content
    include ../common/full-menu
    section.section.hero
        include ../common/header
        .author__hero
            .author
                .author__bg
                    img(src="./assets/images/svg/stars1.svg", alt="galaxy").author__icon
                .author__data
                    .author__avatar
                        img.author__img(src="./assets/images/content/avatar-small.jpg", alt="photo__img")
                    .author__desc
                        .author__name #{titlePage}
                        .author__info #{titleSite}
        .down-btn__works
            .down-btn
                a(href="#").down-btn__link
                    +icon('portf_arrow_down', 'down-btn__icon')

        .hero__works
            .work-title
                h1.work-title__title Мои работы
                img(src="./assets/images/svg/stars2.1.svg", alt="galaxy").work-title__img
        
    section.slide
        +trapezoid('works')
        #slider-component
            
        
    section.feedback
        h1.feedback__title что обо мне говорят  
        .feedback__teachers 
            .teachers
                +teacher('teachers','teacher', teacher, image)

        .feedback__communication
            h2.title-fb связаться со мной
            hr.feedback__hr
            form(action="" method="").form-fb
                fieldset.form-fb__fs
                    .name-fb
                        input(required type="text" name="name-fb").name-fb__input#name 
                        label(for="name-fb").name-fb__label Имя
                    .email-fb
                        input(required type="email" name="email-fb").email-fb__input#email 
                        label(for="email").name-fb__label Email
                    .comment-fb
                        textarea(name="comment").comment-fb__area#comment
                        label(for="comment").comment-fb__label Ваше сообщение
                .form-fb__buttons
                    button(type="submit").button.button_submit Отправить
                    button(type="reset").button.button_clear Очистить
                    

        .feedback__btn
            .up-btn
                a(href="#").up-btn__link
                    +icon('portf_arrow_up', 'up-btn__icon')
        footer.footer-blog
            include ../common/footer

                  


